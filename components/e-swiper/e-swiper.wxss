/* components/home-swiper/home-swiper.wxss */
.swiper-box{
  width: 100%;
  height: 284rpx;
}

.home-swiper {
  width: 100%;
  height: 240rpx;
}

.home-swiper-item {
  box-sizing: border-box;
  padding: 0 7.5rpx;
}

.home-swiper-item image {
  width: 100%;
  height: 100%;
}
.home-swiper-indicator{
  margin: 20rpx auto 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.home-swiper-indicator-item{
  width: 15rpx;
  height: 15rpx;
  background-color: #eee;
  margin-right: 10rpx;
  border-radius: 50%;
}
.current-swiper-indicator-item {
  background-color: red;
}
.home-swiper-indicator-item:nth-last-child(1){
  margin-right: 0;
}


