.c--f60 {
  color: #f60;
}

.clamp1, .clamp2, .clamp3 {
  display: -webkit-box !important;
  overflow: hidden;
  -webkit-box-orient: vertical;
}

.clamp1 {
  -webkit-line-clamp: 1;
}

.clamp2 {
  -webkit-line-clamp: 2;
}

.clamp3 {
  -webkit-line-clamp: 3;
}

.carts-list {
  padding: 0 30rpx;
  padding-bottom: 120rpx;
  background: #eee;
  padding-top: 20rpx;
}

.carts-list .carts-item {
  padding: 30rpx;
  width: 100%;
  position: relative;
  box-shadow: 0rpx 0rpx 30rpx 0rpx rgba(4, 0, 0, 0.2);
  border-radius: 10rpx;
}

.carts-list .carts-item:nth-child(1) {
  border-top: 0;
}

.carts-select {
  margin-top: 5rpx;
  width: 30rpx;
  height: 30rpx;
}

.carts-item .carts-cnt {
  flex: 1;
  padding: 0 20rpx;
}

.carts-cnt .carts-image {
  float: left;
  margin-right: 20rpx;
  height: 150rpx;
  width: 150rpx;
}

.carts-cnt .carts-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 150rpx;
}

.carts-cnt .carts-title {
  font-size: 15px;
}

.carts-cnt .carts-guige {
  font-size: 20rpx;
  border-radius: 10rpx;
  border: solid 1rpx #fc3d42;
  padding: 5rpx 10rpx;
  color: #fc3d42;
  display: inline-block;
}

.carts-cnt .carts-subtitle {
  display: flex;
  flex-direction: row;
  font-size: 15px;
}

.carts-list .carts-item .carts-del {
  position: absolute;
  top: 20rpx;
  right: 10rpx;
}

/*数量加减*/

.carts-num {
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  align-self: flex-end;
  text-align: center;
  height: 38rpx;
}

.carts-num input {
  font-size: 24rpx;
  font-family: arial;
  height: 38rpx;
  line-height: 38rpx;
  width: 93rpx;
  background: #f5f5f5;
  margin: 0 5rpx;
}

.carts-num .minus, .carts-num .plus {
  color: #000;
  text-align: center;
  line-height: 38rpx;
  width: 46rpx;
  background: #f5f5f5;
}

.carts-num .minus {
  font-size: 24rpx;
}

.carts-num .minus.disabled {
  color: #ccc;
}

.carts-num .plus {
  font-size: 24rpx;
}

.bottomfixed {
  z-index: 999;
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #eee;
  border-top: 2rpx solid #ccc;
}

.bottomfixed .inner {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bottomfixed .inner .chkAll {
  font-size: 28rpx;
  margin-right: 40rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bottomfixed .inner .chkAll .allselect {
  width: 30rpx;
  height: 30rpx;
}

.bottomfixed .inner .total {
  font-size: 28rpx;
}

.bottomfixed .inner .total em {
  color: #f60;
}

.btn-pay {
  position: absolute;
  right: 0px;
  background: #fc3d42;
  color: #fff;
  padding: 0 20px;
  font-size: 28rpx;
  height: 68rpx;
  line-height: 68rpx;
  margin-right: 30rpx;
  border-radius: 40rpx;
}

.disabled {
  background: #ccc;
}

.content {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  font-size: 15px;
  color: #999;
  text-align: center;
}

.right {
  width: 10rpx;
}

.priecLogo {
  width: 40rpx;
}
