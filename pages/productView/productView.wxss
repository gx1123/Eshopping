/*主容器*/  
.stepper { 
    border-radius: 3px;  
    height: 48rpx;
}  
  
/*加号和减号*/  
.stepper .sign {  
    width: 60rpx;
    line-height: 48rpx;
    text-align: center;  
    float: left;  
    background: #f5f5f5;
}  
  
/*数值*/  
.stepper .number {  
     margin: 0 auto;   
    text-align: center;  
    font-size: 16px;  
    color: #000000;
    background: #f5f5f5;
    margin-left: 5rpx;
    margin-right: 5rpx;
    width: 120rpx;
    line-height: 48rpx;
    height: 48rpx;
}  
  
/*普通样式*/  
.stepper .normal{  
    color: black;  
}  
/*禁用样式*/  
.stepper .disabled{  
    color: #ccc;  
} 
